@{
    ViewBag.Title = "Редагування інформації про правило дорожнього руху";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Lr1.Models
@model PDR
<h2>ПДД № @Model.Id</h2>
@using (Html.BeginForm("Edit", "PDR", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Назва")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p><input type="submit" value="Відредагувати" /></p>
    </fieldset>
}