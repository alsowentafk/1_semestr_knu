
@{
    ViewBag.Title = "EditDTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Lr1.Models.DTP
<h2>ДТП № @Model.Id</h2>
@using (Html.BeginForm("EditDTP", "AddDTP", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Название ДТП ")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.Type, "Тип нарушения ")
            <br />
            @Html.EditorFor(m => m.Type)

        </p>
        <p>
            @Html.LabelFor(m => m.Price, "Размер штрафа ")
            <br />
            @Html.EditorFor(m => m.Price)
        </p>
        <p><input type="submit" value="Редактировать" /></p>
    </fieldset>
}